@model IEnumerable<LibraryWebApp.Models.Reader>

<h1>@ViewData["Title"]</h1>

@if (TempData["ReaderSuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["ReaderSuccessMessage"]</div>
}
@if (TempData["ReaderErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ReaderErrorMessage"]</div>
}

<p>
    <a asp-controller="Library" asp-action="Details" asp-route-id="@ViewBag.CurrentLibraryId" class="btn btn-secondary">Back to Library Details</a>
</p>
<p>
    <a asp-action="Create" asp-route-libraryId="@ViewBag.CurrentLibraryId" class="btn btn-primary">Add New Reader</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-break">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td class="text-break">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>