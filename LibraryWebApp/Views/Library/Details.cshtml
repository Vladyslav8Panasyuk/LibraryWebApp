@model LibraryWebApp.Models.Library

@{
    ViewData["Title"] = "Library Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Library</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 text-break">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10 text-break">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div class="mb-3">
    <a asp-controller="Book" asp-action="Index" asp-route-libraryId="@Model.Id" class="btn btn-primary">View Books (@(Model.Books.Count))</a> |
    <a asp-controller="Reader" asp-action="Index" asp-route-libraryId="@Model.Id" class="btn btn-primary">View Readers (@(Model.Readers.Count))</a>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>